<%= nested_form_for(@contact) do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name %>
  </div>

  <div class="field">
    <%= form.label :phones %>
    <%= form.fields_for :phones do |phone|%>
      <%= phone.text_field :number %>
      <%= phone.link_to_remove "Remove phone" %>
    <% end %>
    <%= form.link_to_add "Add Phone", :phones %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
